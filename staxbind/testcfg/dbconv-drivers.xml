<?xml version="1.0" encoding="UTF-8"?>

<!-- Definition of all testable data format drivers
  -->

<driverGroup name="xmlDrivers"
 xmlns="http://www.sun.com/japex/testSuite">

      <!-- Jackson json processor (0.9.6); manual, automatic -->
      <driver name="Json/jackson/automatic">
        <description><div xmlns=""><p>Test driver for JSON (text) that uses Jackson json processor (AUTO)</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.JacksonDriverAutomatic" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/jackson/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <driver name="Json/jackson/manual">
        <description><div xmlns=""><p>Test driver for JSON (text) that uses Jackson json processor (MANUAL)</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.JacksonDriverManual" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/jackson/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- Caucho/Hessian (3.2.0, format v2) -->
      <driver name="Hessian/caucho">
        <description><div xmlns=""><p>Test driver for Hessian format (binary)
using implementation by Caucho
</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.HessianDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/hessian/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- JAXB 2.0 -->
      <driver name="Xml/text/JAXB2">
        <description><div xmlns=""><p>Test driver for XML(text) that uses JAXB (2.x) on Stax</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.JaxbDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/jaxb2/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- XStream -->
      <driver name="Xml/text/xstream-1.3.0">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Xstream (1.3.0) on Stax</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.XstreamDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/xstream-old/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <driver name="Xml/text/xstream-1.3.1">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Xstream (1.3.1) on Stax</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.XstreamDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/xstream/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
        <param name="xstream.enableCglib" value="false"/>
      </driver>

