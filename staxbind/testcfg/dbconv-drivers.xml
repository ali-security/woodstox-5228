<?xml version="1.0" encoding="UTF-8"?>

<!-- Definition of all testable data format drivers
  -->

<driverGroup name="xmlDrivers"
 xmlns="http://www.sun.com/japex/testSuite">

      <!-- Caucho/Hessian (3.2.0, format v2) -->
      <driver name="Hessian/caucho">
        <description><div xmlns=""><p>Test driver for Hessian format (binary)
using implementation by Caucho
</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.HessianDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/hessian/*.jar"/>
        <!-- still need Woodstox for loading test data -->
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- Jackson json processor (0.9.4) -->
      <driver name="Json/jackson">
        <description><div xmlns=""><p>Test driver for JSON (text) that uses Jackson json processor</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.JacksonDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/jackson/*.jar"/>
        <!-- still need Woodstox for loading test data -->
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- JAXB 2.0 -->
      <driver name="Xml/text/JAXB2">
        <description><div xmlns=""><p>Test driver for XML(text) that uses JAXB (2.x) on Stax</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.JaxbDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/jaxb2/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- XStream -->
      <driver name="Xml/text/xstream">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Xstream (1.3) on Stax</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.XstreamDriver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/xstream/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <!-- "Raw" Stax drivers -->
      <driver name="Xml/text/wstx3">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Woodstox 3.2.x</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Wstx3Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
      </driver>

      <driver name="Xml/text/wstx4-typed">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Woodstox 4.0</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Wstx4Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/stax2/*.jar"/>
        <param name="japex.classPath" value="lib/wstx4/*.jar"/>
      </driver>

</driverGroup>
