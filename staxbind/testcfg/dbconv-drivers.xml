      <!-- "Raw" Stax drivers -->

      <driver name="Xml/text/sun">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Sun Stax parser (SJSXP)</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Stax1Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>

        <!-- Stand-alone version from http://sjsxp.dev.java.net:
"com.sun.xml.stream.ZephyrParserFactory"
"com.sun.xml.stream.ZephyrWriterFactory"
       -->
        <!-- JDK-bundled version:
"com.sun.xml.internal.stream.XMLInputFactoryImpl"
"com.sun.xml.internal.stream.XMLOutputFactoryImpl"
       -->

        <param name="javax.xml.stream.XMLInputFactory" value=
"com.sun.xml.internal.stream.XMLInputFactoryImpl"
       />
        <param name="javax.xml.stream.XMLOutputFactory" value= 
"com.sun.xml.internal.stream.XMLOutputFactoryImpl"
       />
     </driver>

      <driver name="Xml/text/ibm">
        <description><div xmlns=""><p>Test driver for XML(text) that uses IBM Stax parser (Xlxp?)</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Stax1Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
        <param name="japex.classPath" value="lib/ibm/*.jar"/>

        <param name="javax.xml.stream.XMLInputFactory" value=
         "com.ibm.xml.xlxp.api.stax.XMLInputFactoryImpl" />
        />
        <param name="javax.xml.stream.XMLOutputFactory" value=
         "com.ibm.xml.xlxp.api.stax.XMLOutputFactoryImpl"
        />
      </driver>

      <driver name="Xml/text/wstx3">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Woodstox 3.2.x</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Stax1Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>

        <param name="javax.xml.stream.XMLInputFactory" value=
"com.ctc.wstx.stax.WstxInputFactory"
       />
        <param name="javax.xml.stream.XMLOutputFactory" value=
"com.ctc.wstx.stax.WstxOutputFactory"
       />
      </driver>

      <driver name="Xml/text/aalto">
        <description><div xmlns=""><p>Test driver for XML(text) that uses Aalto via stax1</p></div></description>
        <param name="japex.driverClass" value="org.codehaus.staxbind.dbconv.Stax1Driver" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/*.jar"/>
        <param name="japex.classPath" value="lib/wstx3/*.jar"/>
        <param name="japex.classPath" value="lib/aalto/*.jar"/>
        <param name="japex.classPath" value="lib/stax2/*.jar"/>

        <param name="javax.xml.stream.XMLInputFactory" value=
         "org.codehaus.wool.stax.InputFactoryImpl" />
        <param name="javax.xml.stream.XMLOutputFactory" value=
         "org.codehaus.wool.stax.OutputFactoryImpl" />

      </driver>

      <!-- "Typed" Stax drivers -->

      <driver name="Xml/text/wstx4-typed">
